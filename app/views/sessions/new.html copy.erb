<h2 class="ui center aligned header">
  Welcome to MessageMe <i class="inline-block red fitted coffee icon"></i> - a Chat App
</h2>
<h3 class="ui center aligned header">
  <i class="blue power off icon"></i>
  Let's get started...
</h3>



<div class="container">
  <h4 class="text-center mt-2">Log In</h4>
</div>

<!--  Use form_with helper to aid with the form for logging in an existing user . e.g.,
      local :true specifies form_with to use local http and not ajax -->
<div class="container row justify-content-center col-10">

  <!--  1.  A session does not involve the creation of a resource [object] like an article, so
          instead of passing form_with the argument "model", we use "scope" of "session"
      2.  In this case, we need to give Rails the url to use to send the form's data-->
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

    <div class="form-group row">
      <%= f.label :username, class: "col-2 col-form-label" %>
      <div class="col-8">
        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter the username used to sign up" %>
      </div>
    </div>

    <div class="form-group row mt-2">
      <%= f.label :password, class: "col-2 col-form-label" %>
      <div class="col-9">
        <%= f.password_field :password, class: "form-control shadow rounded" %>
      </div>
    </div>

    <div class="mt-2 text-center">
      <%= f.submit "Log In" %>
    </div>

  <% end %>

</div>













<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
          <label>Username</label>
          <div class="ui left icon input">
            <input type="text" placeholder="Username">
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <input type="password">
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="ui red submit button">Login</div>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big red button">
        <i class="signup icon"></i>
        Sign Up
      </div>
        <a class="link item">
            <%= link_to "Sign up", signup_path, class: "red active item" %>
        </a>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>


