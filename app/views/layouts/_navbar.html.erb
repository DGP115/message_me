<div class="ui inverted small menu">
  <div class="ui container">
    <a class="link item">
      <%= link_to "Chatroom", chatroom_path, class: "red active item" %>
    </a>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account<i class="dropdown icon"></i>
        <div class="menu">
          <% if !logged_in? %>
            <%= link_to "Log in",   login_path, class: "item" %>
          <% end %>
          <% if logged_in? %>
            <%= link_to "Edit profile", edit_user_path(current_user), class: "item" %>
            <%= link_to "Log out",  logout_path, class: "item",
                                    data: { "turbo-method": :delete } %>
          <% end %>

        </div>
      </div>
      <div class="item">
        <% if !current_user %>
          <%= link_to "Sign up", signup_path, class: "ui primary button" %>
        <% end %>
      </div>
      <div class="link item">
        <%= link_to "About", about_path, class: "ui inverted primary button" %>
      </div>
    </div>
  </div>
</div>
